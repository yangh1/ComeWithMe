<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="edu.rosehulman.ComeWithMe.HomepageFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/primary"
        android:minHeight="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_gravity="center">

        <Button
            android:id="@+id/create_event_button"
            style="?android:textAppearanceSmall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/button_create_event"
            android:textStyle="bold" />

        <Button
            android:id="@+id/pending_event_button"
            style="?android:textAppearanceSmall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_pending_evnet"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|bottom" />

        <Button
            android:id="@+id/upcoming_event_button"
            style="?android:textAppearanceSmall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/button_upcoming_event"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/friendlist_button"
            style="?android:textAppearanceSmall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/button_friendlist"
            android:textStyle="bold"
            android:layout_gravity="center" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
